<AnchorPane prefHeight="599.0" prefWidth="508.0" stylesheets="@../css/Style.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.control.ClientDetailsController">
   <children>
      <ImageView fitHeight="95.0" fitWidth="153.0" layoutX="355.0" layoutY="517.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../img/header.png" />
         </image>
      </ImageView>
      <TextField fx:id="dispClientIDTxt" layoutX="47.0" layoutY="62.0" prefHeight="25.0" prefWidth="163.0" promptText="Client ID" />
      <Button fx:id="findButton" layoutX="227.0" layoutY="60.0" mnemonicParsing="false" onAction="#onFindClientIDButtonClick" prefHeight="29.0" prefWidth="78.0" text="Find" />
      <TextArea fx:id="clientDetailsField" editable="false" layoutX="47.0" layoutY="101.0" prefHeight="91.0" prefWidth="421.0" promptText="Client Details:" style="-fx-background-color: #ffffff;" />
      <Separator layoutX="76.0" layoutY="516.0" prefHeight="2.0" prefWidth="363.0" />
      <Accordion layoutX="25.0" layoutY="232.0" />
      <VBox layoutX="164.0" layoutY="221.0" prefHeight="247.0" prefWidth="181.0" spacing="25.0">
         <children>
            <Button graphicTextGap="2.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="180.0" text="Create Appointment" textAlignment="JUSTIFY" textOverrun="CLIP">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Button>
            <Button mnemonicParsing="false" prefHeight="45.0" prefWidth="180.0" text="Cancel Appointment" />
            <Button fx:id="dispCreateClientBtn" disable="true" mnemonicParsing="false" prefHeight="45.0" prefWidth="180.0" text="Create Client" />
         </children>
         <padding>
            <Insets bottom="5.0" top="5.0" />
         </padding>
      </VBox>
      <Button fx:id="dispLogoutBtn" layoutX="20.0" layoutY="542.0" mnemonicParsing="false" onAction="#onLogoutButtonClick" text="Logout">
         <effect>
            <Reflection />
         </effect>
      </Button>
   </children>
</AnchorPane>
